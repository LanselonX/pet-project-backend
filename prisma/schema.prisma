generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  // https://github.com/prisma/prisma/issues/27556
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  password     String
  orders       Order[]
  role         Role     @default(USER)
  chef         Chef?
  refreshToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Chef {
  id        Int      @id @default(autoincrement())
  bio       String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique
  imageUrl  String?
  meals     Meal[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Meal {
  id             Int             @id @default(autoincrement())
  name           String
  description    String
  micronutrients Micronutrients?
  macronutrients Macronutrients?
  orderItems     OrderItem[]
  imageUrl       String?
  ingredients    String
  type           MealType[]
  chef           Chef?           @relation(fields: [chefId], references: [id])
  chefId         Int?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model Order {
  id        Int         @id @default(autoincrement())
  status    OrderStatus @default(PENDING)
  user      User        @relation(fields: [userId], references: [id])
  userId    Int
  items     OrderItem[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model OrderItem {
  id       Int   @id @default(autoincrement())
  order    Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId  Int
  meal     Meal  @relation(fields: [mealId], references: [id])
  mealId   Int
  price    Float
  quantity Int
}

model Macronutrients {
  id        Int      @id @default(autoincrement())
  calories  String
  fat       String
  carbs     String
  protein   String
  fiber     String
  sugars    String
  meal      Meal     @relation(fields: [mealId], references: [id])
  mealId    Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Micronutrients {
  id        Int      @id @default(autoincrement())
  omega     String
  magnesium String
  vitaminB  String
  vitaminD  String
  calcium   String
  iron      String
  potassium String
  sodium    String
  meal      Meal     @relation(fields: [mealId], references: [id])
  mealId    Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
  CHEF
}

enum MealType {
  VEGETARIAN
  NOT_SPICY
  LOW_CARB
  GLUTEN_FREE
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELED
}
